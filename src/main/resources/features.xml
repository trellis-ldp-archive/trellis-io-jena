<?xml version='1.0' encoding='UTF-8'?>
<features xmlns="http://karaf.apache.org/xmlns/features/v1.4.0" name="trellis-service-io-jena-${project.version}">

  <repository>mvn:edu.amherst.acdc/trellis-api/${trellisApiVersion}/xml/features</repository>
  <repository>mvn:edu.amherst.acdc/trellis-spi/${trellisSpiVersion}/xml/features</repository>
  <repository>mvn:edu.amherst.acdc/trellis-vocabulary/${trellisVocabularyVersion}/xml/features</repository>

  <feature name="trellis-service-io-jena" version="${project.version}">
    <details>Installs the Jena-backed serialization service</details>

    <feature>trellis-api</feature>
    <feature>trellis-spi</feature>
    <feature>trellis-vocabulary</feature>

    <bundle dependency="true">mvn:org.apache.commons/commons-rdf-api/${commonsRdfVersion}</bundle>
    <bundle dependency="true">mvn:org.apache.commons/commons-rdf-jena/${commonsRdfVersion}</bundle>
    <bundle dependency="treu">mvn:org.apahce.jena/jena-osgi/${jenaVersion}</bundle>
    <bundle dependency="true">mvn:com.github.andrewoma.dexx/collection/${dexxVersion}</bundle>
    <bundle dependency="true">mvn:org.apache.commons/commons-lang3/${commonsLangVersion}</bundle>
    <bundle dependency="true">mvn:org.apache.commons/commons-csv/${commonsCsvVersion}</bundle>
    <bundle dependency="true">mvn:org.apache.thrift/libthrift/${thriftVersion}</bundle>

    <bundle>mvn:edu.amherst.acdc/trellis-service-io-jena/${project.version}</bundle>
  </feature>
</features>
